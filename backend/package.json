{
  "name": "digital-utopia-backend",
  "version": "1.0.0",
  "description": "Digital Utopia 2.0 Backend API - Production-ready microservices architecture",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "logs:tail": "firebase functions:log",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy": "firebase deploy"
  },
  "keywords": [
    "crypto",
    "trading",
    "bitcoin",
    "ethereum",
    "blockchain",
    "fintech",
    "api",
    "microservices",
    "firebase",
    "nextjs",
    "typescript"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "dependencies": {
    "next": "^16.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "firebase": "^10.7.0",
    "firebase-admin": "^12.0.0",
    "@sendgrid/mail": "^8.1.0",
    "@sendgrid/helpers": "^0.4.1",
    "zod": "^3.22.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "@types/crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.0",
    "uuid": "^9.0.0",
    "@types/uuid": "^9.0.0",
    "date-fns": "^2.30.0",
    "decimal.js": "^10.4.0",
    "lodash": "^4.17.0",
    "@types/lodash": "^4.14.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "multer": "^1.4.0",
    "@types/multer": "^1.4.0",
    "sharp": "^0.33.0",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^4.0.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.0",
    "@types/cors": "^2.8.0",
    "compression": "^1.7.0",
    "@types/compression": "^1.7.0",
    "express-rate-limit": "^7.1.0",
    "express": "^4.18.0",
    "@types/express": "^4.17.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0",
    "@types/winston": "^2.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^6.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digital-utopia/backend-api.git"
  },
  "bugs": {
    "url": "https://github.com/digital-utopia/backend-api/issues"
  },
  "homepage": "https://digital-utopia.com",
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}