# Digital Utopia Platform - Environment Configuration

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these values from your Firebase Console > Project Settings > General > Your apps

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# =============================================================================
# FIREBASE ADMIN SDK (Admin App Only)
# =============================================================================
# Generate this from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project_id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# =============================================================================
# SENDGRID EMAIL SERVICE
# =============================================================================
# Get API key from SendGrid dashboard
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@digitalutopia.com
SENDGRID_FROM_NAME=Digital Utopia

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3002

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# TRADING API CONFIGURATION
# =============================================================================
# TradingView Chart Integration
NEXT_PUBLIC_TRADINGVIEW_LIBRARY_PATH=https://s3.tradingview.com/tv.js

# MetaTrader API (if using MT5/MT4 integration)
MT5_SERVER=your_mt5_server
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password

# Market Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
IEX_CLOUD_API_KEY=your_iex_cloud_key

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key

# Session secret
SESSION_SECRET=your_session_secret_key

# =============================================================================
# DATABASE CONFIGURATION (If using additional DB)
# =============================================================================
# PostgreSQL (for additional analytics/compliance data)
DATABASE_URL=postgresql://username:password@localhost:5432/digital_utopia
DATABASE_SSL=true

# Redis (for caching and session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# File Upload Service (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# SMS Service (for 2FA and notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
# KYC/AML Services
KYC_PROVIDER_API_KEY=your_kyc_provider_key
AML_SCREENING_API_KEY=your_aml_api_key

# Payment Processors
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Crypto Payment Processing
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_CRYPTOCURRENCY=true
NEXT_PUBLIC_ENABLE_FOREX=true
NEXT_PUBLIC_ENABLE_COMMODITIES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug settings
NEXT_PUBLIC_DEBUG=false
DEBUG_LEVEL=info

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Log level
LOG_LEVEL=info